# ===========================================
# InsightDesk Development Environment
# ===========================================
# This file is pre-configured for docker-compose.dev.yml
# Just run: docker compose -f docker-compose.dev.yml up -d
# Then: bun run dev

# ----- Server -----
NODE_ENV=development
PORT=3001
HOST=localhost
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ----- Database (PostgreSQL) -----
# Matches docker-compose.dev.yml postgres service
DATABASE_URL=postgresql://insightdesk:insightdesk_dev@localhost:5432/insightdesk

# ----- Valkey (Redis-compatible) -----
# Matches docker-compose.dev.yml valkey service
VALKEY_URL=redis://localhost:6379

# ----- Authentication (Better Auth) -----
# Dev-only secret - DO NOT use in production!
BETTER_AUTH_SECRET=dev-secret-key-change-me-in-production-32chars
BETTER_AUTH_URL=http://localhost:3001

# Session settings
SESSION_MAX_AGE=604800
SESSION_UPDATE_AGE=86400

# ----- OAuth Providers (Optional) -----
# Leave empty for development, configure if needed
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ----- Email (Mailpit - catches all emails) -----
# Access inbox at http://localhost:8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=InsightDesk <noreply@localhost>

# ----- File Storage (MinIO) -----
# Access console at http://localhost:9001 (minioadmin/minioadmin)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=insightdesk-uploads
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# ----- Logging -----
LOG_LEVEL=debug

# ----- Rate Limiting -----
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
